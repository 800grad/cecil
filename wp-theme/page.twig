{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper">
        {% if post.meta('hero-header') or post.meta('hero-intro') %}
            <article class="hero">
                {% if post.meta('hero-header') %}
                <header>
                    {{ post.meta('hero-header') }}
                </header>
                {% endif %}
                {% if post.meta('hero-intro') %}
                    {{ post.meta('hero-intro') }}
                {% endif %}
            </article>
        {% endif %}
        <article class="article-content post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            {% if post.meta('hero-header') %}
                <h2 class="article-h1">
                    {{ post.title }}
                </h2>
            {% else %}
                <h1 class="article-h1">
                    {{ post.title }}
                </h1>
            {% endif %}
            <div class="article-body">
                {{ post.content }}
            </div>
        </article>
    </div>
{% endblock %}
