{% block html_head_container %}
    {% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
    <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
    <header class="mainhead" id="mainhead">
        <div class="content-wrapper">
            {% block header %}
                <div class="mainhead-logo" role="banner">
                    <a class="mainhead-title" href="{{site.url}}" rel="home" title="home">{{site.name}}</a>
                    <div class="mainhead-slogan">{{site.description}}</div>
                </div>
                <nav id="nav-main" class="mainnavigation" role="navigation">
                    {% include "menu.twig" with {'menu': menu.get_items} %}
                </nav>
            {% endblock %}
        </div>
    </header>

    <main id="content" role="main" class="content-wrapper{% if sidebar_class %} {{sidebar_class}}{% endif %}">
        {% if title %}
            <h1>{{title}}</h1>
        {% endif %}

        {% block content %}
            Sorry, no content
        {% endblock %}

        {% if sidebar %}
            <aside class="layout-sidebar">
                {{sidebar}}
            </aside>
        {% endif %}
        <svg width="928" height="1038" viewBox="0 0 928 1038" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M432 57.4752C451.802 46.0427 476.198 46.0427 496 57.4752L847.692 260.525C867.494 271.957 879.692 293.085 879.692 315.95V722.05C879.692 744.915 867.494 766.043 847.692 777.475L496 980.525C476.198 991.957 451.802 991.957 432 980.525L80.3078 777.475C60.5061 766.043 48.3078 744.915 48.3078 722.05V315.95C48.3078 293.085 60.5061 271.957 80.3078 260.525L432 57.4752Z" stroke="currentColor" stroke-width="96" stroke-linejoin="round"/>
        </svg>
    </main>

    {% block footer %}
        <footer id="mainfooter" class="footer">
            {% include 'footer.twig' %}
        </footer>
        {{ function('wp_footer') }}
    {% endblock %}
</body>
</html>
